    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel x:ConnectionId='1' x:Name="contentPanel" Margin="0,0,0,0">
            <TextBlock Text="ЗЧМ" Margin="0,0,0,40"/>
   
            <StackPanel x:ConnectionId='2' x:Name="inputPanel" Orientation="Horizontal" Margin="0,20,276,20">
                
                <Button x:ConnectionId='4' x:Name="inputButton" Content="Герра ПА"                          />
            </StackPanel>
            <TextBlock x:ConnectionId='3' x:Name="greetingOutput"/>
        </StackPanel>
    </Grid>
</Page>

